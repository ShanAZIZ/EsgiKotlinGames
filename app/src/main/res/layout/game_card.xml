<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/background_color"
    android:layout_width="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_placeholder"
        android:backgroundTint="@color/text_grey"
        android:backgroundTintMode="multiply"
        android:layout_height="110dp">
        <View
            android:id="@+id/card_image"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:background="@drawable/vignette_placeholder"
            />
        <LinearLayout
            app:layout_constraintStart_toEndOf="@+id/card_image"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAME TITLE"
                android:textColor="@color/white"
                android:fontFamily="@font/google_sans_regular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editeur"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/google_sans_regular"
                />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Prix :"
                    android:textColor="@color/white"
                    android:fontFamily="@font/google_sans_regular"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_marginStart="1dp"
                    android:layout_height="wrap_content"
                    android:text="10.00e"
                    android:textColor="@color/white"
                    android:fontFamily="@font/google_sans_regular"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="0dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="EN SAVOIR PLUS"
            android:background="@drawable/game_card_button_background"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>